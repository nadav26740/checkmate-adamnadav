<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="HistoryListItemTemplate">
        <Border BorderBrush="#ECF0F1" BorderThickness="2" Background="#34495E" CornerRadius="15">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Margin="5" BorderBrush="#Af000000" BorderThickness="0" CornerRadius="15" ClipToBounds="True">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Path=ToolImage}" 
                           Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="300"/>
                        <ColumnDefinition MinWidth="36"/>
                        <ColumnDefinition/>
                        <ColumnDefinition MinWidth="36"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"  Background="#CFD8DC" HorizontalAlignment="Right" VerticalAlignment="Center"
                                BorderBrush="#212121" BorderThickness="3" CornerRadius="10">
                        <TextBlock Text="{Binding Path=To, FallbackValue='To'}" TextAlignment="Center" Padding="18" Foreground="#212121"
                                   FontFamily="Arial Black" FontSize="18" FontWeight="Bold"/>
                    </Border>

                    <TextBlock Grid.Column="2" Text="{Binding Path=MoveType, FallbackValue='←'}" Foreground="#ECF0F1" FontSize="92" Margin="0,0,0,20"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />

                    <Border Grid.Column="3"  Background="#CFD8DC" HorizontalAlignment="left" VerticalAlignment="Center"
                                BorderBrush="#212121" BorderThickness="3" CornerRadius="10">
                        <TextBlock Text="{Binding Path=From, FallbackValue='From'}" TextAlignment="Center" Padding="18" Foreground="#212121"
                                   FontFamily="Arial Black" FontSize="18" FontWeight="Bold"/>
                    </Border>

                    <TextBlock Text="{Binding Path=Description, FallbackValue='Chess Has been accured'}" TextAlignment="Left" Padding="18" Foreground="#ECF0F1"
                                   FontFamily="Arial Black" FontSize="15" FontWeight="Bold" TextWrapping="WrapWithOverflow"/>
                </Grid>
                <!-- <StackPanel Grid.Column="1" Margin="5">
                        <StackPanel Orientation="Horizontal" TextBlock.FontSize="30" TextBlock.FontFamily="Arial Black">
                            <TextBlock Text="{Binding Path=To, FallbackValue='To'}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Path=from, FallbackValue='From'}" FontSize="18" 
                                   FontFamily="Arial" FontStyle="Italic"/>
                    </StackPanel> -->

            </Grid>
        </Border>

